<%= form_for(candidate) do |f| %>
  <div>
    <%= f.label :name, "姓名" %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :age, "年齡" %>
    <%= f.text_field :age %>
  </div>
  
  <div>
    <%= f.label :party, "黨派" %>
    <%= f.text_field :party %>
  </div>
  
  <div>
    <%= f.label :politics, "政見" %>
    <%= f.text_area :politics %>
  </div>
  
  <div>
    <%= f.submit %>
  </div>
<% end %>
  